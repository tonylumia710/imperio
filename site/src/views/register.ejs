<!DOCTYPE html>
<html lang="es">

<%- include ('partials/head.ejs') %>

<body>
  <%- include('partials/header.ejs') %>

  <main class="home">
    <div class="register">
      <form action="/register.html" method="post" class="card">
        <h1>Crear Cuenta</h1>
        <div class="formulario">
          <label for="nombre">Nombre:</label>
          <input type="text" placeholder="Ingrese su nombre" name="nombre" id="nombre" required><br>

          <label for="apellido">Apellido:</label>
          <input type="text" placeholder="Ingrese apellido" name="apellido" required><br>

          <label for="email">Email:</label>
          <input type="email" placeholder="Ingrese email" name="email" required><br>

          <label for="pass">Password:</label>
          <input type="password" placeholder="Password" name="pass" required><br>

          <label for="pass">Confirmar Password:</label>
          <input type="password" placeholder="password" name="pass" required><br>
          
        </div>
        <div class="check">
            <label for="terms">  Acepto los <a href="">términos y condiciones</a> </label>
            <input type="checkbox" name="terms" id="recordar"> 
            <span class="error-message">Debe aceptar los términos y condiciones</span>
        </div>
        <button class="button button--positionRegister" onclick="validate()" id="button"
          type="submit">Registrarse</button>
        <a href="/login">
      </form>
    </div> 
     <%- include('partials/footer.ejs') %>

  </main>


</body>

</html>